<h1>New post!</h1>
<%= link_to "Back", :action => :index %>
<%= form_for :post, :url => {:action => :create} do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>