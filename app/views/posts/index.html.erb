<h1>Listing post</h1>
<%= link_to "New post", :action => :new %>
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th>Detalle</th>
  </tr>

  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.text %></td>
      <td><%= link_to "see detail", post %></td>
      <td><%= link_to "destroy post", post, method: :delete, data: {confirm: 'Are you sure?'} %></td>
    </tr>
  <% end %>
</table>